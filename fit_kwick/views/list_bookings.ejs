<!DOCTYPE html>
<html>
<head>
    <title>Customer Bookings</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <h1>Bookings for Customer ID: <%= bookings.length > 0 ? bookings[0].customer_id : 'N/A' %></h1>

    <% if (bookings.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Booking Number</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Activity Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% bookings.forEach(booking => { %>
                    <tr>
                        <td><%= booking.booking_number %></td>
                        <td><%= booking.date %></td>
                        <td><%= booking.time %></td>
                        <td><%= booking.activity_type %>on <%= booking.date %> at <%= booking.time %>
                            <form action="/deletebookings" method="GET" style="display:inline;">
                               <button type="submit">Delete</button>
                            </form>
                          </td>
                        <td>
                            <form action="/deltebookings" method="GET">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No bookings found for this customer.</p>
    <% } %>

    <a href="/">Home</a>
</body>
</html>

